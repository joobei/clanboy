{
	"definitions": {},
	"$schema": "http://json-schema.org/draft-07/schema#", 
	"$id": "https://localhost:8080/assets/matches.schema.json", 
	"title": "Matches", 
	"type": "object",
    "properties": {
        "id": {
            "description":"Unique identifier for a match",
            "type":"integer",
            "exclusiveMinimum": 0
        },
        "vs": {
            "description":"Name of enemy team",
            "type":"string"
        },
        "date": {
            "description":"Date the match is scheduled",
            "type":"string"
        },
        "map": {
            "description":"Map to be played",
            "type":"string"
        },
        "players":{
            "description": "Who has signed up for the match",
            "type":"array",
            "items": {
                "type": "string"
              },
              "maxItems": 70,
              "uniqueItems": true
        }
    },
    "required": [ "id" ]
}
